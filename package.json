{
  "name": "@solarpunkltd/swarm-comment-js",
  "version": "0.0.11",
  "description": "JS library for commenting on Swarm",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "license": "Apache-2.0",
  "keywords": [
    "swarm",
    "js",
    "comment"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Solar-Punk-Ltd/swarm-comment-js"
  },
  "bugs": {
    "url": "https://github.com/Solar-Punk-Ltd/swarm-comment-js/issues"
  },
  "author": "balint.ujvari@solarpunk.buzz",
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run build",
    "build:mine": "tsc src/scripts/mine.ts --outDir scriptsDist",
    "mine": "npm run build:mine && node scriptsDist/mine.js"
  },
  "dependencies": {
    "@ethersphere/bee-js": "^10.1.1",
    "@solarpunkltd/comment-system": "^1.9.1",
    "cafe-utility": "^33.3.1",
    "uuid": "^11.0.3",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  }
}
