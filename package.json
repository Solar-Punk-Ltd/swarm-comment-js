{
  "name": "@solarpunkltd/swarm-comment-js",
  "version": "0.0.3",
  "description": "JS library for commenting on Swarm",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "license": "Apache-2.0",
  "keywords": [
    "swarm",
    "js",
    "comment"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Solar-Punk-Ltd/swarm-comment-js"
  },
  "bugs": {
    "url": "https://github.com/Solar-Punk-Ltd/swarm-comment-js/issues"
  },
  "author": "balint.ujvari@solarpunk.buzz",
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run build",
    "build:mine": "tsc src/scripts/mine.ts --outDir scriptsDist",
    "mine": "npm run build:mine && node scriptsDist/mine.js"
  },
  "dependencies": {
    "@ethersphere/bee-js": "^9.6.0",
    "@solarpunkltd/comment-system": "^1.8.3",
    "cafe-utility": "^30.0.1",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^4.2.4",
    "vite-plugin-node-polyfills": "^0.19.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  }
}
